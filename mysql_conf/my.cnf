!includedir /etc/mysql/conf.d/
!includedir /etc/mysql/mysql.conf.d/

[mysqld]
server-id=1
log-bin=mysql-bin
binlog-format=ROW

max_allowed_packet=256M

thread_cache_size=8
innodb_file_per_table
skip-name-resolve
wait_timeout=300
interactive_timeout=300
open_files_limit=10000
query_cache_type=1
query_cache_limit=2M

#::::::::::::::::::::::::::::::::::::::::::::::::::::::
#Par√¢metros de acordo com o tamanho do Cloud Server
query_cache_size=32M
innodb_buffer_pool_size=256M
key_buffer_size=32M
#::::::::::::::::::::::::::::::::::::::::::::::::::::::


create table test(
id integer not null ,
name varchar(100)
);